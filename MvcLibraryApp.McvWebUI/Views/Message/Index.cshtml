@using MvcLibraryApp.McvWebUI.Models.Entity
@model List<Messages>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>İşlem Tarihi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Sender</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>
            <td>@item.Date</td>
        </tr>
    }
</table>