
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Admin Paneli</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Templates/AdminLTE-3.0.4/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Admin Paneli</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">                   
                        <a href="#" class="d-block"><i style="margin-left:12px;" class="nav-icon fas fa-address-book"></i> &nbsp; Panel Araçları</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview ">
                            <a href="/Statistics/Index/" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Ana Sayfa
                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview ">
                            <a href="/Category/Index/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Kategoriler

                                </p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview ">
                            <a href="/Book/Index/" class="nav-link">
                                <i class="nav-icon fas fa-book-open"></i>
                                <p>
                                    Kitaplar

                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Writer/Index/" class="nav-link">
                                <i class="nav-icon fas fa-user-check"></i>
                                <p>
                                    Yazarlar

                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Member/Index/" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Üyeler

                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Employee/Index/" class="nav-link">
                                <i class="nav-icon fas fa-user-clock"></i>
                                <p>
                                    Personeller

                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/BorrowedBook/Lend/" class="nav-link">
                                <i class="nav-icon fas fa-arrow-alt-circle-right"></i>
                                <p>
                                    Ödünç Kitap Ver
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/BorrowedBook/Index/" class="nav-link">
                                <i class="nav-icon fas fa-arrow-alt-circle-left"></i>
                                <p>
                                    Ödünç Kitap Al
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Operation/Index/" class="nav-link">
                                <i class="nav-icon fas fa-pencil-alt"></i>
                                <p>
                                    Kitap İşlemleri
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Showcase/Index/" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Siteye Git
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Announcement/Index/" class="nav-link">
                                <i class="nav-icon fas fa-circle"></i>
                                <p>
                                    Duyurular
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Statistics/Gallery/" class="nav-link">
                                <i class="nav-icon far fa-image"></i>
                                <p>
                                    Galeri
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("A"))
                        {
                            <li class="nav-item">
                                <a href="/Statistics/LinqCard/" class="nav-link">
                                    <i class="nav-icon fas fa-id-card-alt"></i>
                                    <p>
                                        Linq Kartlar
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/Statistics/AirCard/" class="nav-link">
                                <i class="nav-icon fas fa-cloud-download-alt"></i>
                                <p>
                                    Hava Kartları
                                </p>
                            </a>
                        </li>
                        @if (User.IsInRole("A"))
                        {
                            <li class="nav-item">
                                <a href="/Settings/Index/" class="nav-link">
                                    <i class="nav-icon fas fa-th"></i>
                                    <p>
                                        Ayarlar
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="/AdminLogin/LogOut/" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Çıkış
                                </p>
                            </a>
                        </li>
                    </ul>
                    <br />
                    <br />
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <div class="content">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Templates/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Templates/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Templates/AdminLTE-3.0.4/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/Templates/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Templates/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/Templates/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
</body>
</html>
