@model MvcLibraryApp.McvWebUI.Models.Entity.Movements
@{
    ViewBag.Title = "Lend";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Kitap Ödünç Verme Sayfası</h2>

<br />

<form class="form-group" method="post">
    <div>
        @Html.Label("Kitap Adı")
        @Html.DropDownListFor(x => x.Books.Id, (List<SelectListItem>)ViewBag.result2, new { @class = "form-control" })
        <br />
        @Html.Label("Üye Adı ve Soyadı")
        @Html.DropDownListFor(x => x.Members.Id, (List<SelectListItem>)ViewBag.result1, new { @class = "form-control" })
        <br />
        @Html.Label("Personel Adı ve Soyadı")
        @Html.DropDownListFor(x => x.Employees.Id, (List<SelectListItem>)ViewBag.result3, new { @class = "form-control" })
        <br />
        @Html.Label("Kitap Verilme Tarihi")
        <input type="text" class="form-control" name="DateOfIssue" value="@DateTime.Now.ToShortDateString()" />
        <br />
        @Html.Label("Kitap Geri Alınma Tarihi")
        <input type="text" class="form-control" name="ReturnDate" value="@DateTime.Now.AddDays(15).ToShortDateString()" />
        <br />
        <button class="btn btn-info">Kitap Ödünç Ver</button>
        <input type="hidden" value="False" name="Status" />
    </div>
</form>



