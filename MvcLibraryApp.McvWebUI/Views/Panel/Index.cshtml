
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>
@using (Html.BeginForm("Index", "Panel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-bottom:20px">
        <tr>
            <td>
                <b>İsim:</b> @TempData["Numara"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <b>Mail Adresi:</b> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                <b>İsim:</b> @TempData["İsim"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <b>Soyisim:</b> @TempData["Soyİsim"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <b>Kullanıcı Adı:</b> @TempData["Kullanıcı"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <b>Şifre:</b> <input type="text" class="form-control" name="Password" value="@TempData["Şifre"].ToString()" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Eğitim Bilgisi:</b> @TempData["Eğitim"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <b>Telefon:</b> @TempData["Telefon"].ToString()
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Şifre Güncelle</button>
            </td>
        </tr>
    </table>
}
