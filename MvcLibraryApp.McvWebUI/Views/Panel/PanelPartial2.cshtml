@model MvcLibraryApp.McvWebUI.Models.Entity.Members

@using (Html.BeginForm("Index", "Panel", FormMethod.Post))

{

    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">isim</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.MemberName, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Soyisim</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.MemberLastName, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Kullanıcı Adı</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.NickName, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Şifre</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x=>x.Password, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Fotoğraf Linki</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Eğitim Bilgileri</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.School, new { @class = "form-control" })

            </div>

        </div>

