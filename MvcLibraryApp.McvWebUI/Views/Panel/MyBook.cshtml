@using MvcLibraryApp.McvWebUI.Models.Entity
@model List<Movements>
@{
    ViewBag.Title = "MyBook";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<h3 style="margin-left:8px">Aldığım Kitaplar</h3>

<!DOCTYPE html>
<link href="~/Templates/AdminLTE-3.0.4/dist/css/adminlte.min.css" rel="stylesheet" />

<html>

<body class="hold-transition sidebar-mini">

    <section class="content">

        <div class="container-fluid">

            <div class="row">



                <!-- /.col -->

                <div class="col-md-12">

                    <div class="card">

                        <div class="card-header p-2">



                        </div><!-- /.card-header -->

                        <div class="card-body">



                            <div class="tab-pane" id="timeline">

                                <!-- The timeline -->

                                <div class="timeline timeline-inverse">

                                    <!-- timeline time label -->

                                    @foreach (var item in Model)

                                    {

                                        <div class="time-label">

                                            <a class="btn btn-success">

                                                <span class="bg-success">

                                                    @(((DateTime)item.DateOfIssue).ToString("dd-MMM-yyyy"))

                                                </span>

                                            </a>

                                            -----

                                            <a class="btn btn-warning">

                                                <span class="bg-warning">
                                                    @if (item.MemberReturnDate != null)
                                                    {
                                                        @(((DateTime)item.MemberReturnDate).ToString("dd-MMM-yyyy"))
                                                    }


                                                </span>

                                            </a>

                                        </div>

                                        <!-- /.timeline-label -->

                                        <!-- timeline item -->

                                        <div>

                                            <i class="fas fa-book-reader bg-dark"></i>

                                            <div class="timeline-item">

                                                <div class="timeline-body">

                                                    @item.Books.BookName --- @item.Books.PublishingHouse
                                                 
                                                </div>
                                            </div>

                                        </div>

                                    }

                                </div>

                            </div>

                        </div>

                    </div><!-- /.card-body -->

                </div>

                <!-- /.nav-tabs-custom -->

            </div>

            <!-- /.col -->

        </div>

    </section>

</body>

</html>