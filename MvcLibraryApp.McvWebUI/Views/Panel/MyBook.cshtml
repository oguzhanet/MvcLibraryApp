<table class="table table-bordered">
    <tr>
        <th>Kitabın Adı</th>
        <th>Yayınevi</th>
        <th>Verilme Tarihi</th>
        <th>Geri Alınma Tarihi</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Books.BookName</td>
            <td>@item.Books.PublishingHouse</td>
            <td>@Convert.ToDateTime(item.DateOfIssue).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.MemberReturnDate).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

